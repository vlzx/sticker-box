/*遮罩层以及菜单
---------------------------*/
.mask {
  position: fixed;
  top: 0px;
  background-color: #9D9A9A;
  opacity: 0.2;
  height: 100%;
  width: 100%;
  z-index: 2;
}

.popup-menu {
  position: fixed;
  top: 140rpx;
  left: 20rpx;
  display: flex;
  flex-direction: column;
  width: 70%;
  background-color: white;
  z-index: 3;
  border-radius: 5px;
  border: 1px solid rgba(255, 255, 255, 0);
  animation-duration: 0.4s
}

.menu-item {
  display: flex;
  flex-direction: row;
  height: 110rpx;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}
.menu-item:not(:first-child):active{
  display: flex;
  flex-direction: row;
  height: 110rpx;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  background-color: #F5F5F5;
}

.menu-item__text {
  height: 40rpx;
  margin-left: 40rpx;
  font-size: 15px;
  font-weight: bold;
}
.menu-item__switch{
  margin-right: 20rpx;
}
.menu-item__icon {
  margin-right: 30rpx;
  font-weight: normal;
}